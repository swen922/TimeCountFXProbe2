<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="250.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.horovod.timecountfxprobe.view.LoginWindowController">
   <children>
      <TextField fx:id="loginField" alignment="CENTER" layoutX="125.0" layoutY="77.0" promptText="Введите логин" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="80.0">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </TextField>
      <Label fx:id="headLine" alignment="CENTER" contentDisplay="CENTER" layoutX="92.0" layoutY="14.0" text="Введите логин и пароль" textFill="#646464" wrapText="true" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="35.0">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <PasswordField fx:id="passField" alignment="CENTER" layoutX="126.0" layoutY="156.0" promptText="Введите пароль" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="125.0" />
      <HBox alignment="CENTER" layoutX="100.0" layoutY="198.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="180.0">
         <children>
            <Button fx:id="buttonCancel" minWidth="70.0" mnemonicParsing="false" onAction="#handleCancel" text="Отмена">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="buttonOK" defaultButton="true" minHeight="40.0" minWidth="100.0" mnemonicParsing="false" onAction="#handlOK" text="OK">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
   </children>
</AnchorPane>
